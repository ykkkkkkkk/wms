<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/_1dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_boxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三号箱"
        android:layout_marginLeft="@dimen/_38dp"
        android:layout_marginRight="96dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_boxSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_below="@+id/tv_boxName"
        android:layout_marginRight="96dp"
        android:textColor="@color/c_515151"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_barcode"
        android:layout_width="96dp"
        android:layout_height="@dimen/_38dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="9154567895496"
        android:textColor="@color/c_6a5acd"
        android:textSize="@dimen/_12sp" />


</RelativeLayout>
