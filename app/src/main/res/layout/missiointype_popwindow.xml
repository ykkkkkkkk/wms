<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_60dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="外购收料任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="销售发货任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="仓库外购收货任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="采购退货任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="投料调拨任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="生产入库调拨任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="销售拣货任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="出库质检任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="仓管复核任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv10"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="销售装箱任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv11"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="其他入库任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv12"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="其他出库任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv13"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/_1dp"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="补料调拨任务"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:background="@color/white" />

    </LinearLayout>

</ScrollView>
